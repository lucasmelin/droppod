<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
	version="2.5">
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>droppod.servlets.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>droppod.servlets.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
    	<servlet-name>signup</servlet-name>
    	<servlet-class>droppod.servlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addPodcast</servlet-name>
        <servlet-class>droppod.servlets.AddPodcastServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>setLanguage</servlet-name>
        <servlet-class>droppod.servlets.SetLanguageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>podcasts</servlet-name>
        <servlet-class>droppod.servlets.PodcastsServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>verify</servlet-name>
        <servlet-class>droppod.servlets.VerifyUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>signup</servlet-name>
		<url-pattern>/signupServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>addPodcast</servlet-name>
		<url-pattern>/addPodcastServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>setLanguage</servlet-name>
		<url-pattern>/setLanguageServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>podcasts</servlet-name>
		<url-pattern>/podcastServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
    	<servlet-name>verify</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
	<welcome-file-list>
		<welcome-file>welcome.jsp</welcome-file>
	</welcome-file-list>
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
		</jsp-property-group>
	</jsp-config>
	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/droppod</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
  <display-name>EmailSendingWebApp</display-name>
    <!-- SMTP settings -->
    <context-param>
        <param-name>host</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>port</param-name>
        <param-value>587</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>droppod.official@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>pass</param-name>
        <param-value>droppod123</param-value>
    </context-param>
</web-app>