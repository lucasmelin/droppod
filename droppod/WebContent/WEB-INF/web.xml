<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
    version="2.5">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>droppod.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>signup</servlet-name>
    	<servlet-class>droppod.servlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addPodcast</servlet-name>
        <servlet-class>droppod.servlets.AddPodcastServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>setLanguage</servlet-name>
        <servlet-class>droppod.servlets.SetLanguageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>podcasts</servlet-name>
        <servlet-class>droppod.servlets.PodcastsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>follow</servlet-name>
        <servlet-class>droppod.servlets.FollowPodcastServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>unfollow</servlet-name>
        <servlet-class>droppod.servlets.UnfollowPodcastServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>addPodcast</servlet-name>
        <url-pattern>/addPodcastServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>setLanguage</servlet-name>
        <url-pattern>/setLanguageServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
    	<servlet-name>podcasts</servlet-name>
        <url-pattern>/podcastServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
    	<servlet-name>follow</servlet-name>
        <url-pattern>/Follow</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
    	<servlet-name>unfollow</servlet-name>
        <url-pattern>/Unfollow</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/droppod</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  </resource-ref>
</web-app>